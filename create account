        <button class="btn" id="loginBtn">Login</button>
    </div>

    <script>
        function navigateTo(sectionId) {
            document.querySelectorAll('.container').forEach(section => section.classList.remove('active'));
            document.getElementById(sectionId).classList.add('active');
        }

        document.getElementById('accountNextBtn').addEventListener('click', function () {
            document.getElementById('terms').checked ? navigateTo('businessSection') : document.getElementById('warningMessage').style.display = 'block';
        });

        document.getElementById('businessNextBtn').addEventListener('click', () => navigateTo('registrationSection'));
        document.getElementById('registrationNextBtn').addEventListener('click', () => navigateTo('successSection'));
    </script>
